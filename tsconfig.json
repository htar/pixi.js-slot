{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"lib": [ "es2015", "dom" ],
		"typeRoots" : ["node_modules/pixi.js"],
		"types": ["pixi.js"],
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "allowUnreachableCode": true
  },
	"include": ["src/ts/**/*"],
	"exclude": ["**/*.spec.ts"]
}
